<%- include("../partials/header.ejs", {style: [""], title: "Forgot Password"}) %>


<div class="container">
    <form class="row g-3 col-md-10 col-lg-8" action="/forgot/password" method="POST" style="margin:10px auto">
        <%- include('../partials/flash.ejs') %>
        <h4 class="display-4">Type Email address to send verification link</h4>
        <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="email" required>
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Send</button>
        </div>
    </form>
</div>


