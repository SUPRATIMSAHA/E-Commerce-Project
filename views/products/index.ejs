<%- include("../partials/header.ejs", {title: "Shoping Cart", style: ["style"]}) %> <%-
include("../partials/navbar.ejs", {active: "products"}) %>

<div class="container">
  <%- include('../partials/flash.ejs') %>
  <section>
    <h1>Shopping Cart</h1>
  </section>
  <div class="row">
    <% for(let product of products) { %>
    <div class="col-lg-3 product">
      <div class="card text-center m-3" style="width: 17rem">
        <img src="<%= product.img %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.desc.substring(0, 80) %>...</p>
          <a href="/products/<%= product._id %>" class="btn btn-outline-primary">More Info</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include("../partials/footer.ejs") %>