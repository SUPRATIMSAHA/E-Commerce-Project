<%- include("../partials/header.ejs", {title: "Shoping Cart"}) %> <%-
include("../partials/navbar.ejs") %>

<div class="container mt-3">
  <div class="row m-0" style="width: 100%">
    <div class="col-lg-6">
      <div class="card text-center w-lg-75">
        <img src="<%= product.img %>" class="card-img-top p-2" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.desc %></p>
          <a href="#" class="btn btn-outline-success m-1">Buy</a>
          <a href="#" class="btn btn-outline-secondary m-1">Add To Cart</a>
          <a
            href="/products/<%= product._id %>/edit"
            class="btn btn-outline-warning m-1"
            >Edit</a
          >
          <form
            class="d-inline"
            action="/products/<%= product._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-outline-danger m-1">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-6 mt-2">
      <h1>Leave a Review</h1>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
